<?xml version="1.0" encoding="UTF-8"?>
<?xml-model xlink:href="/usr/share/php5/PEAR/data/phing/etc/phing-grammar.rng"
            type="application/xml"
            schematypens="http://relaxng.org/ns/structure/1.0" ?>
            <project name="Image Innovation PayPal IPN Plugin" default="archive" basedir=".">
	<property name="src" value="."/>
	<property name="target" value="." />
    <property name="project" value="UNNAMED"/>

	<target name="archive" description="Copies files to a zip archive in the project directory">
		<zip destfile="${target}/${project}.zip">
			<fileset dir="${src}"> 
				<exclude name="build.xml" />
				<exclude name="*.zip" />
				<exclude name=".**" />
			</fileset>
		</zip>
	</target>
</project>
