<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" method="upgrade"
	client="site" group="system">
	<name>plg_system_ppipn</name>
	<author>Image Innovation</author>
	<creationDate>June 2016</creationDate>
	<version>0.1</version>
	<authorEmail>info@imageinnova.com</authorEmail>
	<files>
		<filename plugin="ppipn">ppipn.php</filename>
		<filename>ppipn.xml</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="logoFile" class="" type="media" default=""
					label="MOD_IINAVBAR_LOGO_LABEL"
					description="MOD_IINAVBAR_LOGO_DESC" />
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />
				<field
					name="menutype"
					type="menu"
					label="MOD_IINAVBAR_FIELD_MENUTYPE_LABEL"
					description="MOD_IINAVBAR_FIELD_MENUTYPE_DESC" />
				<field
					name="base"
					type="menuitem"
					label="MOD_IINAVBAR_FIELD_ACTIVE_LABEL"
					description="MOD_IINAVBAR_FIELD_ACTIVE_DESC"
					>
					<option value="">JCURRENT</option>
				</field>
				<field
					name="startLevel"
					type="list"
					default="1"
					label="MOD_IINAVBAR_FIELD_STARTLEVEL_LABEL"
					description="MOD_IINAVBAR_FIELD_STARTLEVEL_DESC"
				>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="endLevel"
					type="list"
					default="0"
					label="MOD_IINAVBAR_FIELD_ENDLEVEL_LABEL"
					description="MOD_IINAVBAR_FIELD_ENDLEVEL_DESC"
					>
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="showAllChildren"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="MOD_IINAVBAR_FIELD_ALLCHILDREN_LABEL"
					description="MOD_IINAVBAR_FIELD_ALLCHILDREN_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>